@model IEnumerable<GamingStore_Projectoti2.Models.Compras>

@{
    ViewBag.Title = "Index";
}

<h2>Compras relativas aos clientes</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.Nome)
        </th>
