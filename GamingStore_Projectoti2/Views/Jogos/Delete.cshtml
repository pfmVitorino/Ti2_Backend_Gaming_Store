@model GamingStore_Projectoti2.Models.Jogos

@{
    ViewBag.Title = "Delete";
}

<h2>Apagar</h2>
<h2>Tem a certeza que quer apagar este jogo?</h2>
<div>
    <hr />
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd>
            <img src="~/fotografias/@Html.DisplayFor(model => model.Fotografia)"
                 alt="imagem do jogo @Html.DisplayFor(model => model.Nome)"
                 title="@Html.DisplayFor(model => model.Nome)"
                 width="150" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Preco)€
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Plataforma)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Plataforma)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-danger" />
            @Html.ActionLink("Regressar ao Início", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>